T_2.3 ;
    %vpi_call 2 48 "$display", "\012--- Test 3: Sequential PC updates ---" {0 0 0};
    %pushi/vec4 8, 0, 32;
    %store/vec4 v0x5c6abeb31a00_0, 0, 32;
    %delay 10000, 0;
    %load/vec4 v0x5c6abeb31ae0_0;
    %cmpi/e 8, 0, 32;
    %jmp/0xz  T_2.4, 4;
    %vpi_call 2 52 "$display", "PASS: PC correctly updates to 0x00000008" {0 0 0};
    %jmp T_2.5;
T_2.4 ;
    %vpi_call 2 54 "$display", "FAIL: PC should be 0x00000008, got %h", v0x5c6abeb31ae0_0 {0 0 0};
T_2.5 ;
    %pushi/vec4 12, 0, 32;
    %store/vec4 v0x5c6abeb31a00_0, 0, 32;
