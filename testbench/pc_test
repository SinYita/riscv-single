    .scope S_0x5c6abeb02ba0;
T_0 ;
    %wait E_0x5c6abeb14ce0;
    %load/vec4 v0x5c6abeb31890_0;
    %inv;
    %flag_set/vec4 8;
    %jmp/0xz  T_0.0, 8;
    %pushi/vec4 0, 0, 32;
    %assign/vec4 v0x5c6abeb316e0_0, 0;
    %jmp T_0.1;
T_0.0 ;
    %load/vec4 v0x5c6abeb02dc0_0;
    %assign/vec4 v0x5c6abeb316e0_0, 0;
    %vpi_call 3 13 "$write", "PC: %h\012", v0x5c6abeb02dc0_0 {0 0 0};
T_0.1 ;
    %jmp T_0;
    .thread T_0;
    .scope S_0x5c6abeafac00;
T_1 ;
    %pushi/vec4 0, 0, 1;
    %store/vec4 v0x5c6abeb31bb0_0, 0, 1;
T_1.0 ;
    %delay 5000, 0;
    %load/vec4 v0x5c6abeb31bb0_0;
    %inv;
    %store/vec4 v0x5c6abeb31bb0_0, 0, 1;
    %jmp T_1.0;
    %end;
    .thread T_1;
    .scope S_0x5c6abeafac00;
T_2 ;
    %pushi/vec4 0, 0, 1;
    %store/vec4 v0x5c6abeb31cb0_0, 0, 1;
    %pushi/vec4 0, 0, 32;
    %store/vec4 v0x5c6abeb31a00_0, 0, 32;
    %vpi_call 2 24 "$dumpfile", "PC_tb.vcd" {0 0 0};
    %vpi_call 2 25 "$dumpvars", 32'sb00000000000000000000000000000000, S_0x5c6abeafac00 {0 0 0};
    %vpi_call 2 26 "$display", "=== PC Module Testbench ===" {0 0 0};
    %vpi_call 2 27 "$display", "Time\011RST\011NPC\011\011PC" {0 0 0};
    %vpi_call 2 28 "$monitor", "%0t\011%b\011%h\011%h", $time, v0x5c6abeb31cb0_0, v0x5c6abeb31a00_0, v0x5c6abeb31ae0_0 {0 0 0};
    %delay 10000, 0;
    %vpi_call 2 31 "$display", "\012--- Test 1: Reset functionality ---" {0 0 0};
    %pushi/vec4 0, 0, 1;
    %store/vec4 v0x5c6abeb31cb0_0, 0, 1;
    %delay 20000, 0;
    %load/vec4 v0x5c6abeb31ae0_0;
    %cmpi/e 0, 0, 32;
    %jmp/0xz  T_2.0, 4;
    %vpi_call 2 35 "$display", "PASS: Reset sets PC to 0x00000000" {0 0 0};
    %jmp T_2.1;
T_2.0 ;
    %vpi_call 2 37 "$display", "FAIL: Reset should set PC to 0x00000000, got %h", v0x5c6abeb31ae0_0 {0 0 0};
T_2.1 ;
    %vpi_call 2 39 "$display", "\012--- Test 2: Normal PC update ---" {0 0 0};
    %pushi/vec4 1, 0, 1;
    %store/vec4 v0x5c6abeb31cb0_0, 0, 1;
    %pushi/vec4 4, 0, 32;
    %store/vec4 v0x5c6abeb31a00_0, 0, 32;
    %delay 10000, 0;
    %load/vec4 v0x5c6abeb31ae0_0;
    %cmpi/e 4, 0, 32;
    %jmp/0xz  T_2.2, 4;
    %vpi_call 2 44 "$display", "PASS: PC correctly updates to 0x00000004" {0 0 0};
    %jmp T_2.3;
