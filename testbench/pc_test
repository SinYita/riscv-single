T_2.13 ;
    %vpi_call 2 92 "$display", "\012=== PC Testbench Complete ===" {0 0 0};
    %delay 50000, 0;
    %vpi_call 2 94 "$finish" {0 0 0};
    %end;
    .thread T_2;
    .scope S_0x5c6abeafac00;
T_3 ;
    %wait E_0x5c6abeb153f0;
    %load/vec4 v0x5c6abeb31ae0_0;
    %cmpi/e 4294967295, 4294967295, 32;
    %jmp/0xz  T_3.0, 6;
    %vpi_call 2 99 "$display", "ERROR: PC is in undefined state at time %0t", $time {0 0 0};
T_3.0 ;
    %jmp T_3;
    .thread T_3, $push;
