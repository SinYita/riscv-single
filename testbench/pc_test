 .timescale -9 -12;
    .port_info 0 /INPUT 1 "clk";
    .port_info 1 /INPUT 1 "rst";
    .port_info 2 /OUTPUT 32 "PC";
    .port_info 3 /INPUT 32 "NPC";
v0x5c6abeb02dc0_0 .net "NPC", 31 0, v0x5c6abeb31a00_0;  1 drivers
v0x5c6abeb316e0_0 .var "PC", 31 0;
v0x5c6abeb317c0_0 .net "clk", 0 0, v0x5c6abeb31bb0_0;  1 drivers
